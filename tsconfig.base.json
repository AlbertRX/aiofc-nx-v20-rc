{
  "compilerOptions": {
    "target": "ES2021",
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": ["node"],
    "lib": ["ES2022","DOM"],
    "declaration": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@aiokit/bootstrap": ["libs/bootstrap/src/index.ts"],
      "@aiokit/config": ["libs/config/src/index.ts"],
      "@aiokit/exceptions": ["libs/exceptions/src/index.ts"],
      "@aiokit/i18n": ["libs/i18n/src/index.ts"],
      "@aiokit/validation": ["libs/validation/src/index.ts"]
    }
  }
}
